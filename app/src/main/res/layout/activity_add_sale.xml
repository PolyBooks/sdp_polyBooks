<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddSale">

    <EditText
        android:id="@+id/editTextTextPersonName"
        android:layout_width="376dp"
        android:layout_height="34dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Maybe navBar here ? If yes, design once for all activities"
        android:textSize="14sp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="7dp" />

    <Button
        android:id="@+id/scan_button"
        android:layout_width="258dp"
        android:layout_height="71dp"
        android:text="Scan Book Barcode"
        tools:layout_editor_absoluteX="76dp"
        tools:layout_editor_absoluteY="150dp" />

    <Button
        android:id="@+id/fill_isbn_button"
        android:layout_width="258dp"
        android:layout_height="71dp"
        android:text="Input Book ISBN"
        tools:layout_editor_absoluteX="76dp"
        tools:layout_editor_absoluteY="426dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Or"
        android:textSize="30sp"
        tools:layout_editor_absoluteX="190dp"
        tools:layout_editor_absoluteY="284dp" />

    <EditText
        android:id="@+id/fillin_ISBN"
        android:layout_width="257dp"
        android:layout_height="48dp"
        android:ems="10"
        android:hint="ISBN"
        android:inputType="number"
        tools:layout_editor_absoluteX="77dp"
        tools:layout_editor_absoluteY="384dp" />

</androidx.constraintlayout.widget.ConstraintLayout>