<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FilteringBooksActivity">

<!--    Reset default filtering values-->
    <Button
        android:id="@+id/reset_button"
        android:text= "@string/reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="9dp"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

<!--    Go to results -->
    <Button
        android:id="@+id/results_button"
        android:text="@string/results"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="9dp"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

<!--    Lists of parameters -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@id/results_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/reset_button" >

        <!-- Sort by parameter -->
        <LinearLayout
            android:id="@+id/sortBy_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:text="@string/sort_by"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAllCaps="false"
                android:textSize="20sp" />
            
            <RadioGroup
                android:id="@+id/sortGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <RadioButton
                    android:id="@+id/Popularity_sort"
                    android:text="@string/popularity"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />

                <RadioButton
                    android:id="@+id/Title_inc_sort"
                    android:text="@string/title_inc"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />                   android:layout_height="match_parent"

                <RadioButton
                    android:id="@+id/Title_dec_sort"
                    android:text="@string/title_dec"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />

            </RadioGroup>

        </LinearLayout>


        <!-- Field parameter (eg. Computer Science, Biology) -->
        <LinearLayout
            android:id="@+id/field_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:text="@string/field"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAllCaps="false"
                android:textSize="20sp" />

            <RadioGroup
                android:id="@+id/fieldGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/CS"
                    android:text="@string/cs"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />

                <RadioButton
                    android:id="@+id/Biology"
                    android:text="@string/bio"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />

                <RadioButton
                    android:id="@+id/Archi"
                    android:text="@string/archi"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />

            </RadioGroup>

        </LinearLayout>

        <!-- Semester Parameter (eg. IC-BA1, MA-BA6) -->
        <LinearLayout
            android:id="@+id/semester_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:text="@string/semester"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAllCaps="false"
                android:textSize="20sp" />

            <RadioGroup
                android:id="@+id/semGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <RadioButton
                    android:id="@+id/ic_ba1"
                    android:text="@string/ic_ba1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />

                <RadioButton
                    android:id="@+id/ma_ba2"
                    android:text="@string/ma_ba2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />

                <RadioButton
                    android:id="@+id/sv_ba3"
                    android:text="@string/sv_ba3"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />

                <RadioButton
                    android:id="@+id/gc_ma1"
                    android:text="@string/gc_ma1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />

                <RadioButton
                    android:id="@+id/mt_ma2"
                    android:text="@string/mt_ma2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />

            </RadioGroup>

        </LinearLayout>


        <!-- Course parameter (eg. CS306) -->
        <LinearLayout
            android:id="@+id/course_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:text="@string/course"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAllCaps="false"
                android:textSize="20sp" />

            <RadioGroup
                android:id="@+id/courseGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <RadioButton
                    android:id="@+id/CS306"
                    android:text="@string/cs306"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />

                <RadioButton
                    android:id="@+id/COM480"
                    android:text="@string/com480"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />

            </RadioGroup>

        </LinearLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>